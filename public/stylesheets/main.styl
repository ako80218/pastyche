body
  font 14px/1.5 "Lucida Grande", Helvetica, Arial, sans-serif
  padding-top: 40px
a 
  color: #00B7FF
.tag-cloud-back, .pastyche-forground
    padding-top 30px
.top-bar
    background rgba(70,70,70, 0.8)
    padding 1em 2em
.user-btn
    margin 0 1em
    float right
.icon
    width 30px
.nav-search
    margin 0 15px
.img-small
    width: 200px
.background-image
    width 100%

.background, .content
    position absolute
    top 0 
    left 0 

.shade
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background #000
    opacity  0.5

.background
    width 100%
    height 100%
    /*background-image: url('images/originals/015.jpg');*/
    background-repeat no-repeat

.tag-btn
    border-radius 30px
    background none
    color #fff

.list-inline>li
    padding 0 5px 12px 5px; 

.tag-cloud-back
    background #000
    opacity  0.5
    padding 30px 1em 1em 2em
.modal-save-content, .modal-save
    background-color transparent
    border-radius 30px
    border 1px solid rgba(255,255,255,.7)
    color: #fff
    // background radial-gradient(circle, white, black)

.modal-save-header
    border none

.close-save
    color #fff

.modal-dialogue-save
    margin 100px auto
    
.modal-save-back
    background-image url('/images/modal-back.png')
.modal-save
    resize none